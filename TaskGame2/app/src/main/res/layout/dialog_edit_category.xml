<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Name -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Category name">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Color -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick a color"
        android:layout_marginTop="12dp"/>

    <RadioGroup
        android:id="@+id/rgColors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- Each radio stores the ARGB int in its tag -->
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbC1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:button="@null"
            android:tag="0xFFE57373"
            android:background="@android:color/holo_red_light"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbC2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:button="@null"
            android:tag="0xFF64B5F6"
            android:background="@android:color/holo_blue_light"
            android:layout_marginStart="12dp"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbC3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:button="@null"
            android:tag="0xFF81C784"
            android:background="@android:color/holo_green_light"
            android:layout_marginStart="12dp"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbC4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:button="@null"
            android:tag="0xFFFFD54F"
            android:background="@android:color/holo_orange_light"
            android:layout_marginStart="12dp"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbC5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:button="@null"
            android:tag="0xFFBA68C8"
            android:background="@android:color/holo_purple"
            android:layout_marginStart="12dp"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbC6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:button="@null"
            android:tag="0xFF4DB6AC"
            android:background="@android:color/holo_blue_bright"
            android:layout_marginStart="12dp"/>
    </RadioGroup>
</LinearLayout>
