<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="24dp"
    android:layout_marginTop="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/rounded_background"
        android:padding="24dp">

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_only"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/Level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level"
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/PowerPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/power_points"
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/Experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/experience_points"
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/LevelThreshold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/neededXp"
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginBottom="20dp" />

        <ProgressBar
            android:id="@+id/progressLevel"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:progress="40"
            android:max="100"
            android:progressDrawable="@drawable/progress_bar"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/gain_xp_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:minWidth="120dp"
            android:layout_marginTop="16dp"
            android:text="@string/earn_xp"/>

    </LinearLayout>
</ScrollView>
