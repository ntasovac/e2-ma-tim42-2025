<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/profileRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/profileAvatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="50dp" />

            <TextView
                android:id="@+id/profileUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/username_hint"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profileLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/level"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/profileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/profilePowerPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/power_points"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/profileExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/experience_points"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/profileCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coins"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

            <ImageView
                android:id="@+id/profileQrCode"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/btn_view_statistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/viewStatistics"
                android:textColor="@android:color/white"
                android:minHeight="48dp"
                android:minWidth="160dp"/>

            <TextView
                android:id="@+id/profileBadgesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/badges"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/profileBadgesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/owned_equipment_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"/>

            <EditText
                android:id="@+id/current_password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"
                android:hint="@string/current_password_hint"
                android:inputType="textPassword"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/change_password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"
                android:hint="@string/new_password_hint"
                android:inputType="textPassword"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/confirm_new_password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"
                android:hint="@string/confirm_password_hint"
                android:inputType="textPassword"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/change_password_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:minWidth="120dp"
                android:layout_marginTop="16dp"
                android:text="@string/change_password"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
